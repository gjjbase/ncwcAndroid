<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <!-- #578fbe -->
            <stroke android:width="1px" android:color="@color/white" />

            <corners android:bottomLeftRadius="3dp" android:topLeftRadius="3dp" />
        </shape></item>
    <!-- 当按钮被点击之后 -->
    <item android:state_selected="true"><shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <!-- #578fbe -->
            <stroke android:width="1px" android:color="@color/white" />

            <corners android:bottomLeftRadius="3dp" android:topLeftRadius="3dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <solid android:color="@color/login_btned" />
            <!-- #578fbe -->
            <stroke android:width="1px" android:color="@color/login_btned" />

            <corners android:bottomLeftRadius="3dp" android:topLeftRadius="3dp" />
        </shape></item>

</selector>