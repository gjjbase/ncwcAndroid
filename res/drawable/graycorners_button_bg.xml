<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/bgtitlecolor" />

            <stroke android:width="1px" android:color="@color/transparent" />
        </shape></item>
    <!-- 当按钮被点击之后 -->
    <item android:state_selected="true"><shape android:shape="rectangle">
            <solid android:color="@color/bgtitlecolor" />

            <stroke android:width="1dp" android:color="@color/transparent" />
            <stroke android:width="1dp" android:color="@color/bgtitlecolor" />
        </shape></item>
    <item><shape android:shape="rectangle">

            <!-- 实心 -->
            <solid android:color="@color/bg_color" />
            <!-- 边框 -->
            <stroke android:width="1dp" android:color="@color/gray" />
        </shape></item>

</selector>