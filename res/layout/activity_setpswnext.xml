<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/parentcontainer"
    android:orientation="vertical" >
    <RelativeLayout style="@style/relativeLayout_title" >

        <TextView
            style="@style/relativeLayout_title_textView"
            android:text="@string/modpsw" />

        <TextView style="@style/relativeLayout_title_leftTextView" />
    </RelativeLayout>
	<EditText
	    	android:id="@+id/edt_pswd"
            style="@style/EdittextTheme"
            android:layout_marginTop="@dimen/DIMEN_28PX"
            android:hint="@string/psw"
            android:paddingLeft="@dimen/DIMEN_20PX" />
	<EditText
	    	android:id="@+id/edt_rpswd"
            style="@style/EdittextTheme"
            android:layout_marginTop="@dimen/DIMEN_28PX"
            android:hint="@string/rpass"
            android:paddingLeft="@dimen/DIMEN_20PX" />
	 <TextView
        android:id="@+id/txt_rdt"
        style="@style/Btn_entenrTheme"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:text="@string/next" />
</LinearLayout>
