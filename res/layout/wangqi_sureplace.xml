<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/rl_1"
        style="@style/relativeLayout_title" >

        <ImageView
            android:id="@+id/img_back_02"
            android:layout_width="13dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back" />

        <TextView
            style="@style/relativeLayout_title_textView"
            android:text="@string/suresplace" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_sureplace_info"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/grentxt"
        android:gravity="center"
        android:text="请您确认信息，以便我们准确发货"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/ed_sureplace_name"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_90PX"
        android:layout_below="@+id/tv_sureplace_info"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/DIMEN_40PX"
        android:layout_marginRight="@dimen/DIMEN_40PX"
        android:layout_marginTop="10dp"
        android:background="@drawable/loginedt_shape"
        android:ems="10"
        android:hint="请输入姓名"
        android:paddingLeft="@dimen/DIMEN_20PX"
        android:singleLine="true"
        android:textColorHint="#AAAAAA"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/ed_sureplace_place"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_90PX"
        android:layout_alignLeft="@+id/ed_sureplace_name"
        android:layout_below="@+id/ed_sureplace_name"
        android:layout_marginRight="@dimen/DIMEN_40PX"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:background="@drawable/loginedt_shape"
        android:ems="10"
        android:hint="请输入地址"
        android:paddingLeft="@dimen/DIMEN_20PX"
        android:singleLine="true"
        android:textColorHint="#AAAAAA"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/ed_sureplace_phone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_90PX"
        android:layout_alignLeft="@+id/ed_sureplace_place"
        android:layout_below="@+id/ed_sureplace_place"
        android:layout_marginRight="@dimen/DIMEN_40PX"
        android:layout_marginTop="4dp"
        android:background="@drawable/loginedt_shape"
        android:ems="10"
        android:hint="请输入手机号码"
        android:paddingLeft="@dimen/DIMEN_20PX"
        android:singleLine="true"
        android:textColorHint="#AAAAAA"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/ed_sureplace_youbian"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_90PX"
        android:layout_alignLeft="@+id/ed_sureplace_phone"
        android:layout_below="@+id/ed_sureplace_phone"
        android:layout_marginRight="@dimen/DIMEN_40PX"
        android:layout_marginTop="4dp"
        android:background="@drawable/loginedt_shape"
        android:ems="10"
        android:hint="请输入邮政编码"
        android:paddingLeft="@dimen/DIMEN_20PX"
        android:singleLine="true"
        android:textColorHint="#AAAAAA"
        android:textSize="12sp" />
    <EditText
        android:id="@+id/ed_type"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_90PX"
        android:layout_alignLeft="@+id/ed_sureplace_phone"
        android:layout_below="@+id/ed_sureplace_youbian"
        android:layout_marginRight="@dimen/DIMEN_40PX"
        android:layout_marginTop="4dp"
        android:background="@drawable/loginedt_shape"
        android:hint="请输入车型(必填)"
        android:paddingLeft="@dimen/DIMEN_20PX"
        android:singleLine="true"
        android:textSize="12sp" />
    <EditText
        android:id="@+id/ed_by"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_90PX"
        android:layout_alignLeft="@+id/ed_sureplace_phone"
        android:layout_below="@+id/ed_type"
        android:layout_marginRight="@dimen/DIMEN_40PX"
        android:layout_marginTop="4dp"
        android:background="@drawable/loginedt_shape"
        android:hint="备注(选填)"
        android:paddingLeft="@dimen/DIMEN_20PX"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_sureplace"
        style="@style/Btn_entenrTheme"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_90PX"
        android:layout_below="@+id/ed_by"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/enter" />

</RelativeLayout>