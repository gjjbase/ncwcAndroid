<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/parentcontainer"
    
    android:orientation="vertical" >
     <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_90PX"
            android:layout_marginTop="@dimen/DIMEN_28PX" >

            <TextView
                android:id="@+id/txt_code"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:background="@drawable/logincodeleftsharp"
                android:enabled="false"
                android:gravity="center"
                android:padding="5dp"
                android:text="+86"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/DIMEN_20PX"
                android:layout_toRightOf="@id/txt_code"
                android:background="@drawable/logincoderightsharp"
                android:hint="@string/tpl_msg_login_hint"
                android:inputType="phone"
                android:paddingLeft="@dimen/DIMEN_20PX"
                android:singleLine="true"
                android:textSize="@dimen/DIMEN_24PX" />
        </RelativeLayout>
	  <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_90PX"
            android:layout_marginTop="@dimen/DIMEN_28PX" >

            <TextView
                android:id="@+id/txt_verif"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:background="@drawable/logincodeleftsharp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/tpl_get_verify_code"
                android:textColor="@color/grentxt"
                android:textSize="@dimen/DIMEN_24PX" />

            <EditText
                android:id="@+id/edt_rcode"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/DIMEN_20PX"
                android:layout_toRightOf="@id/txt_verif"
                android:background="@drawable/logincoderightsharp"
                android:hint="@string/tpl_send_verify_code"
                android:paddingLeft="@dimen/DIMEN_20PX"
                android:singleLine="true"
                android:textSize="@dimen/DIMEN_24PX" />
        </RelativeLayout>
        <EditText
            android:id="@+id/pass"
            style="@style/EdittextTheme"
            android:layout_marginTop="@dimen/DIMEN_28PX"
            android:hint="@string/pass"
            android:paddingLeft="@dimen/DIMEN_20PX" />

        <EditText
            android:id="@+id/rpass"
            style="@style/EdittextTheme"
            android:layout_marginTop="@dimen/DIMEN_28PX"
            android:hint="@string/rpass" />
        <TextView
            android:id="@+id/login"
            style="@style/LeftAndRightThem"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_90PX"
            android:layout_marginTop="@dimen/DIMEN_50PX"
            android:background="@drawable/logintxt_shape"
            android:gravity="center"
            android:text="@string/enter"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_36PX" />
</LinearLayout>
