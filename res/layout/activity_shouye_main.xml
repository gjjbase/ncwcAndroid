<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <RelativeLayout
        android:id="@+id/rl"
        style="@style/relativeLayout_title" >

        <TextView
            style="@style/relativeLayout_title_textView"
            android:text="@string/tab_function" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_linear_free"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_92PX"
        android:layout_below="@id/rl"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_free_running"
            android:layout_width="0dp"
            android:layout_height="@dimen/DIMEN_90PX"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/trila"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_32PX" />

        <TextView
            android:id="@+id/btn_free_willdo"
            android:layout_width="0dp"
            android:layout_height="@dimen/DIMEN_90PX"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/bouttobegin"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_32PX" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_noway_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_linear_free"
        android:layout_centerHorizontal="true"
        android:background="@drawable/hengtiao_hong" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_product_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_noway_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

</RelativeLayout>