<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/parentcontainer"
    android:orientation="vertical" >

    <RelativeLayout style="@style/relativeLayout_title" >

        <TextView
            style="@style/relativeLayout_title_textView"
            android:text="@string/login"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_330PX"
        android:scaleType="center"
        android:src="@drawable/tx" />

    <FrameLayout
        style="@style/LeftAndRightThem"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_90PX" >

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/loginedt_shape"
            android:hint="@string/name"
            android:paddingLeft="@dimen/DIMEN_110PX"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_24PX" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/DIMEN_55PX"
            android:src="@drawable/login_user" />
    </FrameLayout>

    <FrameLayout
        style="@style/LeftAndRightThem"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_90PX"
        android:layout_marginTop="@dimen/DIMEN_28PX" >

        <EditText
            android:id="@+id/edt_pasw"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/loginedt_shape"
            android:hint="@string/psw"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/DIMEN_110PX"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_24PX" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/DIMEN_55PX"
            android:src="@drawable/login_pass" />

        <TextView
            android:id="@+id/txt_fidtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/DIMEN_10PX"
            android:text="@string/fidpsw"
            android:textColor="@color/grentxt"
            android:textSize="@dimen/DIMEN_24PX" />
    </FrameLayout>

    <CheckBox
        android:id="@+id/login_check"
        style="@style/CustomCheckboxTheme"
        android:layout_marginBottom="@dimen/DIMEN_20PX"
        android:layout_marginLeft="@dimen/DIMEN_75PX"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:paddingLeft="@dimen/DIMEN_30PX"
        android:text="@string/rember"
        android:checked="true"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/DIMEN_24PX" />

    <TextView
        android:id="@+id/login"
        style="@style/Btn_entenrTheme"
        android:text="@string/login" />

    <TextView
        android:id="@+id/txt_rdt"
        style="@style/Btn_entenrTheme"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:text="@string/reig" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/DIMEN_30PX" >

        <LinearLayout
            android:id="@+id/lin_bot"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_126PX"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/tvWeixin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/login_weixin" />

            <ImageView
                android:id="@+id/tvWeibo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/login_weibo" />

            <ImageView
                android:id="@+id/Qq"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/login_qq" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>