<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/horizontal_preference_single_item" >

    <View
        style="@style/relativeLayout_item_lineView"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_period"
            android:layout_width="@dimen/DIMEN_35PX"
            android:layout_height="@dimen/DIMEN_140PX"
            android:layout_marginBottom="@dimen/DIMEN_5PX"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_5PX"
            android:background="@color/actionsnl"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/img_exp"
            android:layout_width="@dimen/DIMEN_140PX"
            android:layout_height="@dimen/DIMEN_140PX"
            android:layout_marginBottom="@dimen/DIMEN_5PX"
            android:layout_marginTop="@dimen/DIMEN_5PX"
            android:scaleType="center"
            android:src="@drawable/chanpin" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_140PX"
            android:layout_marginBottom="@dimen/DIMEN_5PX"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_5PX" >

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingTop="@dimen/DIMEN_20PX"
                android:text="S600豪华型安全桌椅"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_32PX" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:paddingBottom="@dimen/DIMEN_20PX"
                android:text="开奖时间:2015-6-20"
                android:textSize="@dimen/DIMEN_30PX" />

            <ImageView
                android:id="@+id/img_type"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/DIMEN_50PX"
                android:src="@drawable/shenhe" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>